<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".FinishActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/finishToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        android:background="@color/white"
        android:layout_marginTop="0dp"
        app:titleTextColor="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/tvEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="END"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        />
    <LinearLayout
        android:id="@+id/flFinish"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/item_circular_color_accent_border"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_correct_symbol"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvCongratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        tools:text="Congratulations!\nYou have Finsish the exercise"
        android:textSize="18sp"
        android:textColor="#212121"/>
    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="50dp"
        app:backgroundTint="@null"
        android:background="@drawable/finish_button_background"
        android:textColor="@color/white"
        android:text="FINISH"
        android:textSize="18sp"
        />

</LinearLayout>